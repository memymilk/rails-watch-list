<div style="text-align:center;margin-top:40px;">
<h1>List</h1>
  <%= link_to "back to lists", root_path() %>

<br>
    <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

<div class="d-flex flex-row col-6"  style="display:flex; flex-wrap:wrap; flex-direction:row; justify-content:space-between; gap:10px 20px; row-gap:10px; column-gap:20px;margin:auto"  >



<% @bookmarks.each do |bookmark| %>


    <div class="card col-3" style="width: 18rem;">
      <div class="card-body">
        <p class="card-text">
    <%= bookmark.comment %>
    <br>
    <%= bookmark.movie.title %>

    <br>
    <%= link_to "delete bookmark", bookmark_path(bookmark), data: { turbo_method: :delete }, class: "btn btn-primary" %>
  </p>
      </div>
  </div>

<% end %>
 <div class="card col-3" style="width: 18rem;">
      <div class="card-body">
        <p class="card-text">
 <br> <%= link_to "New bookmark", new_list_bookmark_path(@list) %>
  </div>
  </div>



</div>
